{
  "name": "zod-libphonenumber",
  "description": "Zod schema for phone numbers using `libphonenumber-js`.",
  "author": "Ian Macalinao <me@ianm.com>",
  "version": "0.2.0",
  "license": "Apache-2.0",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist/",
    "src/",
    "README.md"
  ],
  "repository": "github:macalinao/zod-utils",
  "homepage": "https://github.com/macalinao/zod-utils",
  "bugs": {
    "url": "https://github.com/macalinao/zod-utils/issues"
  },
  "keywords": [
    "zod",
    "string",
    "schema",
    "libphonenumber",
    "phone"
  ],
  "dependencies": {
    "libphonenumber-js": "^1.12.17",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@macalinao/eslint-config": "^6.0.0",
    "@macalinao/tsconfig": "^3.2.3",
    "@types/bun": "^1.2.22",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2",
    "zod": "^4.1.9"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "lint": "eslint .",
    "test": "bun test src/"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{md,json}": "prettier --write"
  },
  "peerDependencies": {
    "zod": "^4"
  }
}
